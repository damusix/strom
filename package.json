{
  "name": "strom",
  "version": "1.0.0",
  "description": "A stream based state manager inspired by meiosis pattern",
  "main": "dist/umd.js",
  "module": "dist/cjs.js",
  "jsnext:main": "dist/es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "yarn rollup && node test",
    "watch": "nodemon -e js,ts -x 'yarn test'",
    "types": "tsc --declarationDir dist --declaration true --emitDeclarationOnly",
    "rollup": "rollup -c"
  },
  "files": [
    "dist/*",
    "readme.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damusix/strom.git"
  },
  "keywords": [
    "stream",
    "state",
    "manager",
    "meiosis"
  ],
  "author": "Danilo Alonso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damusix/strom/issues"
  },
  "homepage": "https://github.com/damusix/strom#readme",
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.16",
    "@babel/register": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "ansi-colors": "^3.2.4",
    "fast-check": "^2.13.0",
    "husky": "^5.0.9",
    "rollup": "^2.39.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17.3.9",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        0,
        "always"
      ],
      "body-max-line-length": [
        0,
        "always"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
